{
  "name": "react-universal",
  "version": "0.14.0",
  "description": "",
  "main": "webpack.config.js",
  "scripts": {
    "test": "jest --coverage",
    "preversion": "yarn test && echo \"Running tests for version $npm_package_version...\"",
